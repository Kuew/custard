<% if @displayName: %>
    <li class="user">
        <a href="#userlinks" id="userlink">
            <span class="username"><%= @displayName %></span>
            <span class="caret"></span>
            <img src="<%= @avatarUrl %>" width="32" height="32" alt="<%= @displayName %>" />
        </a>
    </li>
<% else: %>
    <li class="login">
        <a href="/login" data-nonpushstate>Log In</a>
    </li>
<% end %>
